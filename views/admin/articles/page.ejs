<%- include ('../../partials/header.ejs') %>
  <%- include ('../../partials/homenavbar.ejs') %>

    <body>
  
      <div class="container">
        <hr>
     
        <hr>
        <% result.articles.rows.forEach(article => {%>
         <div class="card">
          <div class="card-header"><h3><%= article.title %> </h3> </div>
          <div class="card-body"><a class="btn btn-success" href="/<%= article.slug%> ">Ler Artigo</a></div>

        </div>
        <br>
          
        <%}); %> 

        <div class="row">
          <hr>
          
          <div class="col col-12 ">
            <% if (result.page >2) { %>
              <a class="btn btn-info" type="submit" style="float:left ;" href="/articles/page/<%= result.page -1%>" >PREVIA</a>
            
            <% }else if (result.page ==2 ){  %>
              <a class="btn btn-info" type="submit" style="float:left ;" href="/" >PREVIA</a>
         
            <% } %> 
             
                        
            <% if (result.next) { %>
             <a class="btn btn-info" type="submit" style="float:right ;" href="/articles/page/<%= result.page +1%>" >NEXT</a>
             
            <% } %>
            <% if (result.next == false) { %>
              <a class="btn btn-info" type="submit" style="float:right ;" href="/" >INICIO</a>
             
            <% } %>

          </div>
          
          
  
         </div>
       
      </div>
    </body>
    <%- include ('../../partials/footer.ejs') %>